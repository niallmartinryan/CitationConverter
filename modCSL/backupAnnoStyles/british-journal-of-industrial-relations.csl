<?xml version="1.0" encoding="utf-8" standalone="no"?><style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" default-locale="en-GB" demote-non-dropping-particle="never" page-range-format="minimal" version="1.0">
  <info>
    <title>British Journal of Industrial Relations</title>
    <title-short>BJIR</title-short>
    <id>http://www.zotero.org/styles/british-journal-of-industrial-relations</id>
    <link href="http://www.zotero.org/styles/british-journal-of-industrial-relations" rel="self"/>
    <link href="http://www.zotero.org/styles/harvard-university-of-sunderland" rel="template"/>
    <link href="http://onlinelibrary.wiley.com/journal/10.1111/%28ISSN%291467-8543/homepage/ForAuthors.html" rel="documentation"/>
    <author>
      <name>Sebastian Karcher</name>
    </author>
    <category citation-format="author-date"/>
    <category field="social_science"/>
    <issn>0007-1080</issn>
    <eissn>1467-8543</eissn>
    <summary>Style for the Wiley Journal British Journal of Industrial Relations (based on published articles; the style guide is useless)</summary>
    <updated>2012-11-29T21:26:55+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <macro name="editor">
    <names delimiter=", " variable="editor">
      <name and="text" initialize-with=". "/>
      <label form="short" prefix=" (" suffix=")"/>
    </names>
  </macro>
  <macro name="anon">
    <text form="short" strip-periods="true" term="anonymous" text-case="capitalize-first"/>
  </macro>
  <macro name="conditionalusetitle">
    <choose>
      <if type="article-newspaper">
        <text variable="container-title"/>
      </if>
      <else>
        <text macro="title"/>
      </else>
    </choose>
  </macro>
  <macro name="author">
    <names variable="author">
      <name and="text" delimiter-precedes-last="never" initialize-with=". " name-as-sort-order="all"/>
      <label form="short" prefix=" (" suffix=")"/>
      <substitute>
        <names variable="editor"/>
        <text font-style="italic" macro="conditionalusetitle"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <macro name="author-short">
    <names variable="author">
      <name and="text" delimiter=", " delimiter-precedes-last="never" form="short" initialize-with=". "/>
      <et-al font-style="italic"/>
      <substitute>
        <names variable="editor"/>
        <text macro="conditionalusetitle"/>
        <names variable="translator"/>
        <text macro="anon"/>
      </substitute>
    </names>
  </macro>
  <macro name="access">
    <choose>
      <if variable="URL">
        <group>
          <text variable="URL"/>
          <group prefix=" (" suffix=")">
            <text term="accessed"/>
            <date variable="accessed">
              <date-part name="day" suffix=" "/>
              <date-part name="month" suffix=" "/>
              <date-part name="year"/>
            </date>
          </group>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if match="any" type="bill book graphic legal_case legislation manuscript motion_picture report song webpage">
        <text font-style="italic" variable="title"/>
      </if>
      <else-if match="none" variable="container-title">
        <text font-style="italic" variable="title"/>
      </else-if>
      <else>
        <text form="long" quotes="true" variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <macro name="year-date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else>
        <text form="short" term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number form="ordinal" variable="edition"/>
          <text form="short" term="edition" text-case="capitalize-first"/>
        </group>
      </if>
      <else>
        <text suffix="." variable="edition"/>
      </else>
    </choose>
  </macro>
  <macro name="pages">
    <group>
      <choose>
        <if match="any" type="chapter paper-conference">
          <label form="short" suffix=" " variable="page"/>
        </if>
      </choose>
      <text variable="page"/>
    </group>
  </macro>
  <macro name="issued">
    <choose>
      <if match="any" type="article-newspaper motion_picture paper-conference broadcast">
        <date variable="issued">
          <date-part name="day" suffix=" "/>
          <date-part name="month"/>
        </date>
      </if>
    </choose>
    <choose>
      <if match="any" type="motion_picture paper-conference">
        <date variable="issued">
          <date-part name="year" prefix=" "/>
        </date>
      </if>
    </choose>
  </macro>
  <citation disambiguate-add-givenname="true" disambiguate-add-year-suffix="true" et-al-min="3" et-al-use-first="1">
    <sort>
      <key macro="author-short"/>
      <key macro="year-date"/>
    </sort>
    <layout delimiter="; " prefix="(" suffix=")">
      <group delimiter=": ">
        <group delimiter=" ">
          <text macro="author-short"/>
          <text macro="year-date"/>
        </group>
        <text variable="locator"/>
      </group>
    </layout>
  </citation>
  <bibliography hanging-indent="true" subsequent-author-substitute="———" subsequent-author-substitute-rule="partial-each">
    <sort>
      <key macro="author"/>
      <key macro="year-date"/>
      <key variable="title"/>
    </sort>
    <layout suffix=".">
      <choose>
        <if match="any" type="bill legislation">
          <text macro="author" prefix=" $author$ " suffix=".  $/author$ "/>
        </if>
        <else>
          <text macro="author" prefix=" $author$ " suffix=" $/author$ "/>
          <text macro="year-date" prefix=" $year-date$  (" suffix="). $/year-date$ "/>
        </else>
      </choose>
      <choose>
        <if match="any" type="bill legislation">
          <group delimiter=". " suffix=".">
            <group delimiter=". " font-style="italic">
              <group delimiter=": ">
                <choose>
                  <if match="any" variable="author">
                    <text prefix=" $$ " suffix=" $/$ " variable="title"/>
                  </if>
                </choose>
                <text prefix=" $$ " suffix=" $/$ " variable="references"/>
              </group>
              <text prefix=" $$ " suffix=" $/$ " variable="container-title"/>
            </group>
            <text macro="edition" prefix=" $edition$ " suffix=" $/edition$ "/>
            <text macro="editor" prefix=" $editor$ " suffix=" $/editor$ "/>
            <choose>
              <if variable="number">
                <text prefix=" $$ (" suffix=") $/$ " variable="number"/>
              </if>
              <else>
                <date prefix="(" suffix=")" variable="issued">
                  <date-part name="year"/>
                </date>
              </else>
            </choose>
            <text prefix=" $$ " suffix=" $/$ " variable="note"/>
          </group>
        </if>
        <else-if type="thesis">
          <group delimiter=". " prefix=" " suffix=".">
            <text font-style="italic" macro="title" prefix=" $title$ " suffix=" $/title$ "/>
            <text macro="edition" prefix=" $edition$ " suffix=" $/edition$ "/>
            <text prefix=" $$ " suffix=" $/$ " variable="genre"/>
            <text macro="publisher" prefix=" $publisher$ " suffix=" $/publisher$ "/>
          </group>
        </else-if>
        <else-if type="webpage">
          <group delimiter=". " prefix=" " suffix=".">
            <text macro="title" prefix=" $title$ " suffix=" $/title$ "/>
            <text macro="edition" prefix=" $edition$ " suffix=" $/edition$ "/>
          </group>
          <group delimiter=". " prefix=" " suffix=".">
            <date variable="issued">
              <date-part name="day" suffix=" "/>
              <date-part name="month" suffix=" "/>
              <date-part name="year"/>
            </date>
            <text prefix=" $$ " suffix=" $/$ " variable="container-title"/>
          </group>
        </else-if>
        <else-if type="manuscript">
          <group delimiter=". " prefix=" " suffix=".">
            <group delimiter=" ">
              <text macro="title" prefix=" $title$ " suffix=" $/title$ "/>
              <text prefix=" $$ [" suffix="] $/$ " variable="genre"/>
            </group>
            <text prefix=" $$ " suffix=" $/$ " variable="archive"/>
            <text prefix=" $$ " suffix=" $/$ " variable="archive_location"/>
            <text macro="publisher" prefix=" $publisher$ " suffix=" $/publisher$ "/>
          </group>
        </else-if>
        <else-if match="any" type="article-journal article-magazine article-newspaper broadcast interview manuscript map patent personal_communication song speech thesis webpage motion_picture">
          <group suffix=".">
            <text macro="title" prefix=" $title$  " suffix=" $/title$ "/>
            <text macro="editor" prefix=" $editor$  " suffix=" $/editor$ "/>
          </group>
          <choose>
            <if match="any" variable="author">
              <text font-style="italic" prefix=" $$  " suffix=". $/$ " variable="container-title"/>
            </if>
          </choose>
          <group delimiter=": " prefix=" " suffix=".">
            <group>
              <text prefix=" $$ " suffix=" $/$ " variable="volume"/>
              <text prefix=" $$  (" suffix=") $/$ " variable="issue"/>
              <text macro="issued" prefix=" $issued$ " suffix=" $/issued$ "/>
            </group>
            <text macro="pages" prefix=" $pages$ " suffix=" $/pages$ "/>
          </group>
        </else-if>
        <else-if match="any" type="bill book graphic legal_case legislation motion_picture report song">
          <group delimiter=". " prefix=" " suffix=".">
            <text macro="title" prefix=" $title$ " suffix=" $/title$ "/>
            <text macro="edition" prefix=" $edition$ " suffix=" $/edition$ "/>
            <text macro="editor" prefix=" $editor$ " suffix=" $/editor$ "/>
            <text macro="publisher" prefix=" $publisher$ " suffix=" $/publisher$ "/>
          </group>
        </else-if>
        <else-if match="any" type="chapter paper-conference">
          <text macro="title" prefix=" $title$  " suffix=". $/title$ "/>
          <group delimiter=" " prefix=" ">
            <text prefix=" $$ " suffix=": $/$ " term="in" text-case="capitalize-first"/>
            <text macro="editor" prefix=" $editor$ " suffix=". $/editor$ "/>
            <text font-style="italic" prefix=" $$ " suffix=". $/$ " variable="container-title"/>
            <group delimiter=", " suffix=".">
              <text macro="issued" prefix=" $issued$ " suffix=" $/issued$ "/>
              <text macro="publisher" prefix=" $publisher$ " suffix=" $/publisher$ "/>
              <text macro="pages" prefix=" $pages$ " suffix=" $/pages$ "/>
            </group>
          </group>
        </else-if>
        <else>
          <group suffix=".">
            <text macro="title" prefix=" $title$  " suffix=" $/title$ "/>
            <text macro="editor" prefix=" $editor$  " suffix=" $/editor$ "/>
          </group>
          <text font-style="italic" prefix=" $$  " suffix=". $/$ " variable="container-title"/>
          <group prefix=" " suffix=".">
            <group prefix=" ">
              <text prefix=" $$ " suffix=" $/$ " variable="volume"/>
              <text prefix=" $$  (" suffix=") $/$ " variable="issue"/>
              <text macro="issued" prefix=" $issued$ " suffix=" $/issued$ "/>
            </group>
            <group prefix=" ">
              <label form="short" variable="page"/>
              <text macro="pages" prefix=" $pages$ " suffix=" $/pages$ "/>
            </group>
          </group>
        </else>
      </choose>
      <text macro="access" prefix=" $access$  " suffix=" $/access$ "/>
    </layout>
  </bibliography>
</style>