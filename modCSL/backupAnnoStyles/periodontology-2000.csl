<?xml version="1.0" encoding="utf-8" standalone="no"?><style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" default-locale="en-GB" demote-non-dropping-particle="sort-only" page-range-format="expanded" version="1.0">
  <info>
    <title>Periodontology 2000</title>
    <id>http://www.zotero.org/styles/periodontology-2000</id>
    <link href="http://www.zotero.org/styles/periodontology-2000" rel="self"/>
    <link href="http://www.zotero.org/styles/pediatric-allergy-and-immunology" rel="template"/>
    <link href="http://onlinelibrary.wiley.com/journal/10.1111/(ISSN)1600-0757/homepage/ForAuthors.html" rel="documentation"/>
    <author>
      <name>Sebastian Karcher</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <issn>0906-6713</issn>
    <eissn>1600-0757</eissn>
    <updated>2013-04-02T02:07:39+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <macro name="author">
    <names suffix=". " variable="author">
      <name delimiter=", " delimiter-precedes-et-al="never" delimiter-precedes-last="always" initialize-with="" name-as-sort-order="all" sort-separator=" "/>
      <label form="short" prefix=", "/>
      <substitute>
        <names variable="editor"/>
      </substitute>
    </names>
  </macro>
  <macro name="editor">
    <names suffix=". " variable="editor">
      <name delimiter=", " delimiter-precedes-last="always" initialize-with="" name-as-sort-order="all" sort-separator=" "/>
      <label prefix=", "/>
    </names>
  </macro>
  <macro name="publisher">
    <group delimiter=" ">
      <group delimiter=": ">
        <text variable="publisher-place"/>
        <text variable="publisher"/>
      </group>
      <text macro="date"/>
    </group>
  </macro>
  <macro name="access">
    <choose>
      <if match="none" variable="page">
        <choose>
          <if variable="DOI">
            <text prefix=" doi:" variable="DOI"/>
          </if>
          <else-if variable="URL">
            <text variable="URL"/>
            <group delimiter=" " prefix=" (" suffix=").">
              <text term="accessed"/>
              <date variable="accessed">
                <date-part name="day" prefix=" "/>
                <date-part form="short" name="month" prefix=" " strip-periods="true"/>
                <date-part name="year"/>
              </date>
            </group>
          </else-if>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="journal-title">
    <choose>
      <if match="any" type="article-journal article-magazine">
        <text font-style="italic" form="short" strip-periods="true" variable="container-title"/>
      </if>
      <else>
        <text form="short" suffix=". " variable="container-title"/>
      </else>
    </choose>
  </macro>
  <macro name="date">
    <!--Print full date as "Published online first" for
        journal articles w/o volume and page range and with DOI or URL  -->
    <choose>
      <if type="article-journal">
        <choose>
          <if match="none" variable="volume page">
            <choose>
              <if match="any" variable="DOI URL">
                <group prefix="Published Online First: ">
                  <date delimiter=" " variable="issued">
                    <date-part name="day"/>
                    <date-part form="long" name="month" text-case="capitalize-first"/>
                    <date-part name="year"/>
                  </date>
                </group>
              </if>
              <else>
                <date variable="issued">
                  <date-part name="year"/>
                </date>
              </else>
            </choose>
          </if>
          <else>
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </else>
        </choose>
      </if>
      <else>
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </else>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if match="any" type="book thesis">
        <text font-style="italic" variable="title"/>
      </if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if is-numeric="edition">
        <group delimiter=" ">
          <number form="ordinal" variable="edition"/>
          <text form="short" term="edition"/>
        </group>
      </if>
      <else>
        <text suffix="." variable="edition"/>
      </else>
    </choose>
  </macro>
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout delimiter="," prefix="(" suffix=")">
      <text variable="citation-number"/>
    </layout>
  </citation>
  <bibliography et-al-min="100" et-al-use-first="99" second-field-align="flush">
    <sort>
      <key macro="author"/>
      <key macro="date"/>
    </sort>
    <layout>
      <text prefix=" $$ " suffix=". $/$ " variable="citation-number"/>
      <text macro="author" prefix=" $author$ " suffix=" $/author$ "/>
      <text macro="title" prefix=" $title$ " suffix=".  $/title$ "/>
      <choose>
        <if match="any" type="bill book graphic legal_case legislation motion_picture report song">
          <text macro="edition" prefix=" $edition$  " suffix=" $/edition$ "/>
          <text macro="publisher" prefix=" $publisher$  " suffix=" $/publisher$ "/>
        </if>
        <else-if match="any" type="chapter paper-conference">
          <group prefix=" " suffix=".">
            <text prefix=" $$ " suffix=":  $/$ " term="in" text-case="capitalize-first"/>
            <text macro="editor" prefix=" $editor$ " suffix=" $/editor$ "/>
            <text font-style="italic" prefix=" $$ " suffix=" $/$ " variable="container-title"/>
          </group>
          <group delimiter=": " prefix=" ">
            <text macro="publisher" prefix=" $publisher$ " suffix=" $/publisher$ "/>
            <text prefix=" $$ " suffix=". $/$ " variable="page"/>
          </group>
        </else-if>
        <else>
          <text macro="journal-title" prefix=" $journal-title$ " suffix=" $/journal-title$ "/>
          <group suffix=".">
            <text macro="date" prefix=" $date$  " suffix=" $/date$ "/>
            <group prefix=": ">
              <text font-weight="bold" prefix=" $$ " suffix=" $/$ " variable="volume"/>
              <text prefix=" $$ : " suffix=" $/$ " variable="page"/>
            </group>
          </group>
        </else>
      </choose>
      <text macro="access" prefix=" $access$ " suffix=" $/access$ "/>
    </layout>
  </bibliography>
</style>