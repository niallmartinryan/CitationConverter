<?xml version="1.0" encoding="utf-8" standalone="no"?><style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" default-locale="en-US" demote-non-dropping-particle="never" version="1.0">
  <info>
    <title>Language</title>
    <id>http://www.zotero.org/styles/language</id>
    <link href="http://www.zotero.org/styles/language" rel="self"/>
    <link href="http://www.linguisticsociety.org/files/style-sheet.pdf" rel="documentation"/>
    <author>
      <name>Mark Dingemanse</name>
      <email>mark.dingemanse@mpi.nl</email>
    </author>
    <category citation-format="author-date"/>
    <issn>0097-8507</issn>
    <eissn>1535-0665</eissn>
    <summary>Style for the journal Language (LSA). Loosely based on the Chicago style by Julian Onions.</summary>
    <updated>2012-10-25T21:15:26+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <locale>
    <terms>
      <term form="verb-short" name="editor">ed.</term>
      <term form="verb-short" name="translator">trans.</term>
    </terms>
  </locale>
  <macro name="secondary-contributors">
    <choose>
      <if match="none" type="chapter paper-conference">
        <group delimiter=". ">
          <choose>
            <if variable="author">
              <names variable="editor">
                <label form="verb-short" prefix=" (" suffix=") " text-case="capitalize-first"/>
                <name and="text" delimiter=", "/>
              </names>
            </if>
          </choose>
          <choose>
            <if match="any" variable="author editor">
              <names variable="translator">
                <label form="verb-short" prefix=" (" suffix=") " text-case="capitalize-first"/>
                <name and="text" delimiter=", "/>
              </names>
            </if>
          </choose>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="container-contributors">
    <choose>
      <if match="any" type="chapter paper-conference">
        <group delimiter=", " prefix=",">
          <choose>
            <if variable="author">
              <names variable="editor">
                <label form="verb-short" prefix=" " suffix=" by "/>
                <name and="text" delimiter=", "/>
              </names>
            </if>
          </choose>
          <choose>
            <if match="any" variable="author editor">
              <names variable="translator">
                <label form="verb-short" prefix=" " suffix=" "/>
                <name and="text" delimiter=", "/>
              </names>
            </if>
          </choose>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="anon">
    <choose>
      <if match="none" variable="author editor translator">
        <text form="short" strip-periods="true" term="anonymous" text-case="capitalize-first"/>
      </if>
    </choose>
  </macro>
  <macro name="editor">
    <names variable="editor">
      <name and="text" delimiter=", " delimiter-precedes-last="always" name-as-sort-order="first" sort-separator=", "/>
      <label form="short" prefix=" (" suffix=")"/>
    </names>
  </macro>
  <macro name="translator">
    <names variable="translator">
      <name and="text" delimiter=", " delimiter-precedes-last="always" name-as-sort-order="first" sort-separator=", "/>
      <label form="verb-short" prefix=" (" suffix=")"/>
    </names>
  </macro>
  <macro name="recipient">
    <choose>
      <if type="personal_communication">
        <choose>
          <if variable="genre">
            <text text-case="capitalize-first" variable="genre"/>
          </if>
          <else>
            <text term="letter" text-case="capitalize-first"/>
          </else>
        </choose>
      </if>
    </choose>
    <names delimiter=", " variable="recipient">
      <label form="verb" prefix=" " suffix=" "/>
      <name and="text" delimiter=", "/>
    </names>
  </macro>
  <macro name="contributors">
    <names variable="author">
      <name and="text" delimiter="; " delimiter-precedes-last="always" name-as-sort-order="first" sort-separator=", " suffix=".">
        <name-part font-variant="small-caps" name="family"/>
        <name-part font-variant="small-caps" name="given"/>
      </name>
      <label form="verb-short" prefix=", " suffix=" "/>
      <substitute>
        <text macro="editor"/>
        <text macro="translator"/>
      </substitute>
    </names>
    <text macro="anon"/>
    <text macro="recipient"/>
  </macro>
  <macro name="contributors-short">
    <names variable="author">
      <name and="text" delimiter=", " form="short"/>
      <substitute>
        <names variable="editor"/>
        <names variable="translator"/>
      </substitute>
    </names>
    <text macro="anon"/>
  </macro>
  <macro name="interviewer">
    <names delimiter=", " variable="interviewer">
      <label form="verb" prefix=" " suffix=" " text-case="capitalize-first"/>
      <name and="text" delimiter=", "/>
    </names>
  </macro>
  <macro name="archive">
    <group delimiter=". ">
      <text text-case="capitalize-first" variable="archive_location"/>
      <text variable="archive"/>
      <text variable="archive-place"/>
    </group>
  </macro>
  <macro name="access">
    <group delimiter=". ">
      <choose>
        <if match="any" type="graphic report">
          <text macro="archive"/>
        </if>
        <else-if match="none" type="article-journal article-magazine article-newspaper bill book chapter graphic legal_case legislation motion_picture paper-conference report song thesis">
          <text macro="archive"/>
        </else-if>
      </choose>
      <text prefix="doi:" variable="DOI"/>
      <text variable="URL"/>
    </group>
  </macro>
  <macro name="title">
    <choose>
      <if match="none" variable="title">
        <choose>
          <if match="none" type="personal_communication">
            <text text-case="capitalize-first" variable="genre"/>
          </if>
        </choose>
      </if>
      <else-if match="any" type="bill book graphic legal_case legislation motion_picture report song">
        <text font-style="italic" variable="title"/>
      </else-if>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="edition">
    <choose>
      <if match="any" type="bill book chapter graphic legal_case legislation motion_picture paper-conference report song">
        <choose>
          <if is-numeric="edition">
            <group delimiter=" ">
              <number form="ordinal" variable="edition"/>
              <text form="short" term="edition"/>
            </group>
          </if>
          <else>
            <text suffix="." variable="edition"/>
          </else>
        </choose>
      </if>
    </choose>
  </macro>
  <macro name="locators">
    <choose>
      <if type="article-journal">
        <text prefix=" " suffix="." variable="volume"/>
      </if>
      <else-if match="any" type="bill book graphic legal_case legislation motion_picture report song">
        <group delimiter=". " prefix=". ">
          <group>
            <text form="short" suffix=" " term="volume" text-case="capitalize-first"/>
            <number form="numeric" variable="volume"/>
          </group>
          <group>
            <number form="numeric" variable="number-of-volumes"/>
            <text form="short" plural="true" prefix=" " term="volume"/>
          </group>
        </group>
      </else-if>
    </choose>
  </macro>
  <macro name="locators-chapter">
    <choose>
      <if match="any" type="chapter paper-conference">
        <group prefix=", ">
          <text suffix=":" variable="volume"/>
          <text variable="page"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="locators-article">
    <choose>
      <if type="article-newspaper">
        <group delimiter=", " prefix=", ">
          <group delimiter=" ">
            <text variable="edition"/>
            <text term="edition"/>
          </group>
          <group>
            <text form="short" suffix=" " term="section"/>
            <text variable="section"/>
          </group>
        </group>
      </if>
      <else-if type="article-journal">
        <text prefix="." variable="page"/>
      </else-if>
    </choose>
  </macro>
  <macro name="point-locators">
    <group>
      <choose>
        <if locator="page" match="none">
          <label form="short" suffix=" " variable="locator"/>
        </if>
      </choose>
      <text variable="locator"/>
    </group>
  </macro>
  <macro name="container-title">
    <text font-style="italic" variable="container-title"/>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <macro name="date">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="collection-title">
    <text variable="collection-title"/>
    <text prefix=" " variable="collection-number"/>
  </macro>
  <macro name="event">
    <group>
      <text prefix="Paper " suffix=" " term="presented at"/>
      <text variable="event"/>
    </group>
  </macro>
  <macro name="description">
    <group delimiter=". ">
      <text macro="interviewer"/>
      <text text-case="capitalize-first" variable="medium"/>
    </group>
    <choose>
      <if match="none" variable="title"/>
      <else-if type="thesis"/>
      <else>
        <text prefix=". " text-case="capitalize-first" variable="genre"/>
      </else>
    </choose>
  </macro>
  <macro name="issue">
    <choose>
      <if type="speech">
        <group delimiter=", " prefix=". ">
          <text macro="event"/>
          <text variable="event-place"/>
        </group>
      </if>
      <else-if type="thesis">
        <group delimiter=" " prefix=". ">
          <text macro="publisher"/>
          <text text-case="lowercase" variable="genre"/>
        </group>
      </else-if>
      <else>
        <group delimiter=", " prefix=". ">
          <text macro="publisher"/>
          <choose>
            <if type="manuscript">
              <text value="ms"/>
            </if>
          </choose>
        </group>
      </else>
    </choose>
  </macro>
  <citation disambiguate-add-givenname="true" disambiguate-add-names="true" disambiguate-add-year-suffix="true" et-al-min="4" et-al-use-first="1">
    <layout delimiter="; " prefix="(" suffix=")">
      <group delimiter=":">
        <group delimiter=" ">
          <text macro="contributors-short"/>
          <text macro="date"/>
        </group>
        <text macro="point-locators"/>
      </group>
    </layout>
  </citation>
  <bibliography entry-spacing="0" et-al-min="11" et-al-use-first="7" hanging-indent="true">
    <sort>
      <key macro="contributors"/>
      <key variable="issued"/>
    </sort>
    <layout suffix=".">
      <text macro="contributors" prefix=" $contributors$ " suffix="  $/contributors$ "/>
      <text macro="date" prefix=" $date$ " suffix=".  $/date$ "/>
      <text macro="title" prefix=" $title$ " suffix=" $/title$ "/>
      <text macro="description" prefix=" $description$ " suffix=" $/description$ "/>
      <text macro="secondary-contributors" prefix=" $secondary-contributors$ . " suffix=" $/secondary-contributors$ "/>
      <text macro="container-title" prefix=" $container-title$ . " suffix=" $/container-title$ "/>
      <text macro="container-contributors" prefix=" $container-contributors$ " suffix=" $/container-contributors$ "/>
      <text macro="locators-chapter" prefix=" $locators-chapter$ " suffix=" $/locators-chapter$ "/>
      <text macro="edition" prefix=" $edition$ . " suffix=" $/edition$ "/>
      <text macro="locators" prefix=" $locators$ " suffix=" $/locators$ "/>
      <text macro="collection-title" prefix=" $collection-title$ . " suffix=" $/collection-title$ "/>
      <text macro="issue" prefix=" $issue$ " suffix=" $/issue$ "/>
      <text macro="locators-article" prefix=" $locators-article$ " suffix=" $/locators-article$ "/>
      <text macro="access" prefix=" $access$ . " suffix=" $/access$ "/>
    </layout>
  </bibliography>
</style>