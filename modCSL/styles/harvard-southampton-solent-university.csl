<?xml version="1.0" encoding="utf-8" standalone="no"?><style xmlns="http://purl.org/net/xbiblio/csl" class="in-text" default-locale="en-GB" demote-non-dropping-particle="sort-only" version="1.0">
  <info>
    <title>Southampton Solent University - Harvard</title>
    <id>http://www.zotero.org/styles/harvard-southampton-solent-university</id>
    <link href="http://www.zotero.org/styles/harvard-southampton-solent-university" rel="self"/>
    <link href="http://www.zotero.org/styles/taylor-and-francis-harvard-x" rel="template"/>
    <link href="https://portal.solent.ac.uk/library/help/factsheets/resources/referencing-harvard.pdf" rel="documentation"/>
    <author>
      <name>Sebastian Karcher</name>
    </author>
    <category citation-format="author-date"/>
    <category field="generic-base"/>
    <summary>Southampton Solent Harvard style based on based on BRITISH STANDARDS INSTITUTION, 2010. BS ISO 690:2010
    Information and documentation â€“ Guidelines for bibliographic
    references and citations to information resources.</summary>
    <updated>2013-03-16T02:03:44+00:00</updated>
    <rights license="http://creativecommons.org/licenses/by-sa/3.0/">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>
  </info>
  <macro name="author">
    <choose>
      <if match="none" type="motion_picture broadcast">
        <names variable="author">
          <name and="text" delimiter=", " delimiter-precedes-last="never" initialize-with="." name-as-sort-order="first" sort-separator=", ">
            <name-part name="family" text-case="uppercase"/>
          </name>
          <label form="short" prefix=", "/>
          <et-al font-style="italic"/>
          <substitute>
            <names variable="editor"/>
            <names variable="translator"/>
            <text macro="anon-bib"/>
          </substitute>
        </names>
      </if>
      <else>
        <choose>
          <if variable="container-title">
            <text font-style="italic" variable="container-title"/>
          </if>
          <else>
            <text font-style="italic" variable="title"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="author-short">
    <choose>
      <if match="none" type="motion_picture broadcast">
        <names variable="author">
          <name and="text" delimiter=", " form="short" initialize-with=". "/>
          <et-al font-style="italic"/>
          <substitute>
            <names variable="editor"/>
            <names variable="translator"/>
            <text macro="anon"/>
          </substitute>
        </names>
      </if>
      <else>
        <choose>
          <if variable="container-title">
            <text font-style="italic" variable="container-title"/>
          </if>
          <else>
            <text font-style="italic" variable="title"/>
          </else>
        </choose>
      </else>
    </choose>
  </macro>
  <macro name="anon">
    <text form="short" term="anonymous" text-case="capitalize-first"/>
  </macro>
  <macro name="anon-bib">
    <text form="short" term="anonymous" text-case="uppercase"/>
  </macro>
  <macro name="access">
    <choose>
      <if variable="URL">
        <group delimiter=". ">
          <group delimiter=" " prefix=" [" suffix="]">
            <date delimiter=" " prefix="viewed " variable="accessed">
              <date-part name="day"/>
              <date-part form="short" name="month" strip-periods="true"/>
              <date-part name="year"/>
            </date>
          </group>
          <group>
            <text value="Available from: "/>
            <text variable="URL"/>
          </group>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="title">
    <choose>
      <if match="any" type="thesis">
        <group delimiter=". ">
          <text text-case="title" variable="title"/>
          <group>
            <text variable="genre"/>
            <text prefix=" No. " variable="number"/>
          </group>
        </group>
      </if>
      <else-if match="any" type="bill book graphic legal_case legislation report song speech webpage">
        <group delimiter=". ">
          <group delimiter=" ">
            <text font-style="italic" text-case="title" variable="title"/>
            <choose>
              <if variable="URL">
                <text prefix="[" suffix="]" term="online"/>
              </if>
            </choose>
          </group>
          <text macro="edition"/>
        </group>
      </else-if>
      <else-if match="any" type="motion_picture broadcast"/>
      <else>
        <text variable="title"/>
      </else>
    </choose>
  </macro>
  <macro name="report-details">
    <choose>
      <if type="report">
        <group>
          <text variable="genre"/>
          <text prefix=" No. " variable="number"/>
        </group>
      </if>
    </choose>
  </macro>
  <macro name="container">
    <choose>
      <if match="any" type="chapter paper-conference">
        <text font-style="italic" suffix=": " term="in" text-case="capitalize-first"/>
        <group delimiter=". ">
          <names delimiter=", " variable="editor translator">
            <name and="text" delimiter=", " initialize-with="." sort-separator=", ">
              <name-part name="family" text-case="uppercase"/>
            </name>
            <label form="short" prefix=", "/>
          </names>
          <text font-style="italic" text-case="title" variable="container-title"/>
        </group>
      </if>
      <else-if match="any" type="bill book graphic legal_case legislation motion_picture report song">
        <text variable="container-title"/>
      </else-if>
      <else-if type="broadcast">
        <choose>
          <if variable="container-title">
            <group delimiter=", ">
              <text prefix="Episode " variable="number"/>
              <text variable="title"/>
            </group>
          </if>
        </choose>
      </else-if>
      <else-if type="webpage">
      </else-if>
      <else>
        <group delimiter=" ">
          <text font-style="italic" variable="container-title"/>
          <choose>
            <if variable="URL">
              <text prefix="[" suffix="]" term="online"/>
            </if>
          </choose>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="publisher">
    <choose>
      <if match="any" type="thesis">
        <group delimiter=", ">
          <text variable="publisher"/>
          <text variable="publisher-place"/>
        </group>
      </if>
      <else>
        <group delimiter=", ">
          <group delimiter=": ">
            <text variable="publisher-place"/>
            <text variable="publisher"/>
          </group>
          <text macro="report-details"/>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="event">
    <choose>
      <if variable="event">
        <text suffix=" " term="presented at" text-case="capitalize-first"/>
        <text variable="event"/>
      </if>
    </choose>
  </macro>
  <macro name="issued">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else-if variable="accessed">
        <choose>
          <if type="webpage">
            <date variable="accessed">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text form="short" term="no date"/>
          </else>
        </choose>
      </else-if>
      <else>
        <text form="short" term="no date"/>
      </else>
    </choose>
  </macro>
  <macro name="issued-bib">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </if>
      <else-if variable="accessed">
        <choose>
          <if type="webpage">
            <date variable="accessed">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <text form="short" term="no date"/>
          </else>
        </choose>
      </else-if>
      <else>
        <text form="short" term="no date"/>
      </else>
    </choose>
    <group prefix=" ">
      <choose>
        <if type="motion_picture">
          <choose>
            <if variable="URL">
              <text prefix="[" suffix="]" value="online video"/>
            </if>
            <else>
              <text prefix="[" suffix="]" value="film"/>
            </else>
          </choose>
        </if>
      </choose>
    </group>
  </macro>
  <macro name="edition">
    <group delimiter=" ">
      <choose>
        <if is-numeric="edition">
          <group delimiter=" ">
            <number form="ordinal" variable="edition"/>
            <text form="short" term="edition"/>
          </group>
        </if>
        <else>
          <text suffix="." variable="edition"/>
        </else>
      </choose>
    </group>
  </macro>
  <macro name="locators">
    <choose>
      <if match="any" type="article-journal article-magazine">
        <group delimiter=", " prefix=", ">
          <group>
            <text font-weight="bold" variable="volume"/>
            <text prefix="(" suffix=")" variable="issue"/>
          </group>
          <text variable="page"/>
        </group>
      </if>
      <else-if match="any" type=" article-newspaper">
        <date delimiter=" " prefix=", " variable="issued">
          <date-part name="day"/>
          <date-part form="short" name="month" strip-periods="true"/>
        </date>
        <group delimiter=" " prefix=", ">
          <text variable="page"/>
        </group>
      </else-if>
      <else-if match="any" type="bill  book graphic legal_case legislation motion_picture report song thesis">
        <group delimiter=", " prefix=". ">
          <text macro="event"/>
          <text macro="publisher"/>
        </group>
      </else-if>
      <else-if type="broadcast">
        <group delimiter=". " prefix=", ">
          <text variable="publisher"/>
          <date delimiter=" " variable="issued">
            <date-part form="short" name="month" strip-periods="true"/>
            <date-part name="day"/>
          </date>
        </group>
      </else-if>
      <else-if match="any" type="chapter paper-conference">
        <group delimiter=", " prefix=". ">
          <text macro="event"/>
          <text macro="publisher"/>
          <group delimiter=" ">
            <label form="short" variable="page"/>
            <text variable="page"/>
          </group>
        </group>
      </else-if>
    </choose>
  </macro>
  <citation collapse="year" disambiguate-add-names="true" disambiguate-add-year-suffix="true" et-al-min="3" et-al-use-first="1">
    <sort>
      <key macro="issued"/>
      <key macro="author"/>
    </sort>
    <layout delimiter=", " prefix="(" suffix=")">
      <group delimiter=", ">
        <group delimiter=" ">
          <text macro="author-short"/>
          <text macro="issued"/>
        </group>
        <group delimiter=" ">
          <label form="short" variable="locator"/>
          <text variable="locator"/>
        </group>
      </group>
    </layout>
  </citation>
  <bibliography entry-spacing="0" et-al-min="4" et-al-use-first="1" hanging-indent="true" line-spacing="1">
    <sort>
      <key macro="author"/>
      <key macro="issued" sort="ascending"/>
    </sort>
    <layout>
      <text macro="author" prefix=" $author$ " suffix=", $/author$ "/>
      <group delimiter=". " prefix=" ">
        <text macro="issued-bib" prefix=" $issued-bib$ " suffix=" $/issued-bib$ "/>
        <text macro="title" prefix=" $title$ " suffix=" $/title$ "/>
        <text macro="container" prefix=" $container$ " suffix=" $/container$ "/>
        <text prefix=" $medium$ " suffix=" $medium$ " variable="medium"/>
      </group>
      <text macro="locators" prefix=" $locators$ " suffix=" $/locators$ "/>
      <text macro="access" prefix=" $access$  " suffix=" $/access$ "/>
    </layout>
  </bibliography>
</style>